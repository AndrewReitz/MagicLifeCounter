<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HealthButton" parent="Holo.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="HealthText" parent="Holo.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">150sp</item>
    </style>

    <style name="PoisonButton" parent="Holo.Button">
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="PoisonText" parent="Holo.TextView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">120sp</item>
    </style>
</resources>