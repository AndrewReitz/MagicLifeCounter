<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="None"/>

    <style name="Widget.MagicLifeCounter.NavDrawer.Text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_layout_padding_half</item>
    </style>

    <style name="Widget.MagicLifeCounter.MainLinearLayout" parent="None">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.MagicLifeCounter.MainRelativeLayout" parent="None">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.MagicLifeCounter.MainButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.MagicLifeCounter.MainButton.Rotated" parent="Widget.MagicLifeCounter.MainButton">
        <item name="android:rotation">180</item>
    </style>

    <style name="Widget.MagicLifeCounter.MainText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="Widget.MagicLifeCounter.SecondaryText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
